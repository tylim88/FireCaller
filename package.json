{
	"name": "firecaller",
	"version": "1.0.0",
	"description": "ðŸ”¥Write callable functions systematically like a Firelord. No more chaotic error handling, no more unsafe endpoint data type, no more messy validation. Be the Master of Fire you always wanted to be.",
	"source": "src/index.ts",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"targets": {
		"types": false,
		"main": {
			"optimize": true
		}
	},
	"scripts": {
		"reinstall": "rm -rf node_modules && rm -rf package-lock.json && npm i && npx husky install",
		"tsc": "tsc",
		"lint": "eslint . --ext .ts --fix",
		"pretty-quick": "pretty-quick --stage",
		"test": "firebase emulators:exec --only functions \"rm -rf coverage && jest --forceExit\"",
		"parcel": "npm un firebase && npm i firebase && rm -rf dist && tsc --emitDeclarationOnly true && parcel build && npm i -D firebase",
		"build": "rm -rf dist && tsc",
		"link": "npm link && npm link firelordjs",
		"pub": "npm run build && npm publish --tag beta",
		"dev": "=====================================dev========================================",
		"d-test": "tsc && npm run f-build && npm test",
		"functions": "=====================================functions========================================",
		"f-build": "npm --prefix functions run build",
		"f-reinstall": "npm --prefix functions run reinstall"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.17.10",
		"@babel/preset-typescript": "^7.16.7",
		"@types/jest": "^27.5.0",
		"@types/shelljs": "^0.8.11",
		"@typescript-eslint/eslint-plugin": "^5.23.0",
		"@typescript-eslint/parser": "^5.23.0",
		"dotenv": "^16.0.0",
		"eslint": "^8.15.0",
		"eslint-cli": "^1.1.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^2.7.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"firebase": "^9.8.1",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"jsdoc": "^3.6.10",
		"parcel": "^2.5.0",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"shelljs": "^0.8.5",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.4",
		"zod": "^3.15.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylim88/FireCaller.git"
	},
	"keywords": [
		"firebase",
		"cloud",
		"functions",
		"helper"
	],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tylim88/FireCaller/issues"
	},
	"homepage": "https://github.com/tylim88/FireCaller#readme"
}
